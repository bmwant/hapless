# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true

# 4 space indentation
[*.py]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab
